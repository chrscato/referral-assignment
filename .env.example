# Referral CRM Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=sqlite:///referral_crm.db
DATABASE_ECHO=false

# Microsoft Graph API (for email integration)
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_TENANT_ID=
MS_REDIRECT_URI=http://localhost:8000/auth/callback

# Claude API (for LLM extraction)
ANTHROPIC_API_KEY=

# FileMaker Integration (optional)
FILEMAKER_SERVER=
FILEMAKER_DATABASE=
FILEMAKER_LAYOUT=
FILEMAKER_USERNAME=
FILEMAKER_PASSWORD=

# Application Settings
APP_NAME=Referral CRM
DEBUG=false
ATTACHMENTS_DIR=./attachments

# Email Polling
EMAIL_POLL_INTERVAL_SECONDS=60
EMAIL_INBOX_FOLDER=Inbox

# S3 Storage (for emails and attachments)
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
# For S3-compatible services like MinIO:
# AWS_ENDPOINT_URL=http://localhost:9000
